<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/homeFragment">

	<fragment
		android:id="@+id/homeFragment"
		android:name="com.gozipp.zumer.navDrawerFragments.HomeFragment"
		android:label="Home"
		tools:layout="@layout/fragment_home" >
		<action
			android:id="@+id/action_homeFragment_to_settingsFragment"
			app:destination="@id/settingsFragment" />
	</fragment>
	<fragment
		android:id="@+id/settingsFragment"
		tools:layout="@layout/fragment_settings"
		android:name="com.gozipp.zumer.navDrawerFragments.SettingsFragment"
		android:label="Settings" />
	<fragment
		android:id="@+id/paymentFragment"
		tools:layout="@layout/fragment_payment"
		android:name="com.gozipp.zumer.navDrawerFragments.PaymentFragment"
		android:label="Payment" />
	<fragment
		android:id="@+id/myRidesFragment"
		tools:layout="@layout/fragment_my_rides"
		android:name="com.gozipp.zumer.navDrawerFragments.MyRidesFragment"
		android:label="My Rides" />
</navigation>