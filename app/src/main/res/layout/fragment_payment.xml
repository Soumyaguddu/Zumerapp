<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintBottom_toTopOf="@+id/btnPayment"
		app:layout_constraintTop_toTopOf="parent">


		<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="@dimen/_5sdp"
				android:orientation="vertical"
				android:scaleType="centerInside">


				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/imPayTm"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_margin="@dimen/_10sdp"
						android:layout_marginTop="8dp"
						android:layout_marginEnd="16dp"
						android:background="@android:color/transparent"
						android:padding="4dp"
						android:src="@drawable/ic_paytm"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginStart="@dimen/_10sdp"
						android:layout_marginTop="@dimen/_10sdp"
						android:layout_weight="3"
						android:gravity="center_vertical"
						android:fontFamily="@font/productsansregular"
						android:text="Paytm"
						android:textColor="@color/black"
						android:textSize="@dimen/_16sdp" />

					<TextView
						android:id="@+id/tvPaytmLink"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center|right"
						android:layout_marginRight="@dimen/_10sdp"
						android:drawablePadding="@dimen/_5sdp"
						android:drawableStart="@drawable/link"
						android:gravity="center"
						android:fontFamily="@font/productsansregular"
						android:paddingHorizontal="@dimen/_12sdp"
						android:paddingVertical="@dimen/_5sdp"
						android:text="@string/link"
						android:textColor="@color/purple_700"
						android:textSize="@dimen/_12sdp" />


				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/imMobikwik"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_margin="@dimen/_10sdp"
						android:layout_marginTop="8dp"
						android:layout_marginEnd="16dp"
						android:padding="4dp"
						android:src="@drawable/phone_pey"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginStart="@dimen/_10sdp"
						android:layout_marginTop="@dimen/_10sdp"
						android:layout_weight="3"
						android:gravity="center_vertical"
						android:fontFamily="@font/productsansregular"
						android:text="PhonePe"
						android:textColor="@color/black"
						android:textSize="@dimen/_16sdp" />

					<TextView
						android:id="@+id/tvMobikwik"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center|right"
						android:layout_marginRight="@dimen/_10sdp"
						android:drawablePadding="@dimen/_5sdp"
						android:drawableStart="@drawable/link"
						android:gravity="center"
						android:fontFamily="@font/productsansregular"
						android:paddingHorizontal="@dimen/_12sdp"
						android:paddingVertical="@dimen/_5sdp"
						android:text="@string/link"
						android:textColor="@color/purple_700"
						android:textSize="@dimen/_12sdp" />


				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/imGooglePay"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_margin="@dimen/_10sdp"
						android:layout_marginTop="8dp"
						android:layout_marginEnd="16dp"
						android:padding="4dp"
						android:src="@drawable/ic_googlepaynew"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginStart="@dimen/_10sdp"
						android:layout_marginTop="@dimen/_10sdp"
						android:layout_weight="3"
						android:gravity="center_vertical"
						android:fontFamily="@font/productsansregular"
						android:text="Google Pay"
						android:textColor="@color/black"
						android:textSize="@dimen/_16sdp" />

					<TextView
						android:id="@+id/tvGooglePay"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center|right"
						android:layout_marginRight="@dimen/_10sdp"
						android:drawablePadding="@dimen/_5sdp"
						android:drawableStart="@drawable/link"
						android:gravity="center"
						android:fontFamily="@font/productsansregular"
						android:paddingHorizontal="@dimen/_12sdp"
						android:paddingVertical="@dimen/_5sdp"
						android:text="@string/link"
						android:textColor="@color/purple_700"
						android:textSize="@dimen/_12sdp" />


				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/imgAmazon"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_margin="@dimen/_10sdp"
						android:layout_marginTop="8dp"
						android:layout_marginEnd="16dp"
						android:padding="4dp"
						android:src="@drawable/amazon"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginStart="@dimen/_10sdp"
						android:layout_marginTop="@dimen/_10sdp"
						android:layout_weight="3"
						android:gravity="center_vertical"
						android:fontFamily="@font/productsansregular"
						android:text="Amazon Pay"
						android:textColor="@color/black"
						android:textSize="@dimen/_16sdp" />

					<TextView
						android:id="@+id/tvAmazonPey"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center|right"
						android:layout_marginRight="@dimen/_10sdp"
						android:drawablePadding="@dimen/_5sdp"
						android:drawableStart="@drawable/link"
						android:gravity="center"
						android:fontFamily="@font/productsansregular"
						android:paddingHorizontal="@dimen/_12sdp"
						android:paddingVertical="@dimen/_5sdp"
						android:text="@string/link"
						android:textColor="@color/purple_700"
						android:textSize="@dimen/_12sdp" />


				</LinearLayout>

				<LinearLayout
					android:id="@+id/tvCash"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/imCash"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_margin="@dimen/_10sdp"
						android:layout_marginTop="8dp"
						android:layout_marginEnd="16dp"
						android:padding="4dp"
						android:src="@drawable/pay"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginStart="@dimen/_10sdp"
						android:layout_marginTop="@dimen/_10sdp"
						android:layout_weight="3"
						android:gravity="center_vertical"
						android:fontFamily="@font/productsansregular"
						android:text="@string/cash"
						android:textColor="@color/black"
						android:textSize="@dimen/_16sdp" />

					<TextView
						android:id="@+id/tvPayCash"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center|right"
						android:layout_marginRight="@dimen/_10sdp"
						android:drawableStart="@drawable/link"
						android:drawablePadding="@dimen/_5sdp"
						android:fontFamily="@font/productsansregular"
						android:gravity="center"
						android:paddingHorizontal="@dimen/_12sdp"
						android:paddingVertical="@dimen/_5sdp"
						android:text="@string/pay"
						android:textColor="@color/purple_700"
						android:textSize="@dimen/_12sdp" />


				</LinearLayout>


			</LinearLayout>

		</androidx.core.widget.NestedScrollView>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>


	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/btnPayment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_gravity="center_horizontal|bottom"
		android:layout_margin="@dimen/_20sdp"
		android:background="@drawable/button_selected"
		android:fontFamily="@font/productsansregular"
		android:text="@string/payment"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_anchorGravity="bottom"
		app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>